%h2 
  %center
    Edit Order
  .row
    .large-6.small-centered.columns
      = form_for @order, url: {action: "change"}, html: { method: :put } do |f|
        %fieldset
          %legend Order information

          = f.hidden_field :status, value: 'edited'

          = f.label "Departure"
          = f.text_field :departure

          = f.label "Destination"
          = f.text_field :destination

          = f.label "Date & Time"
          = f.date_select :datetime

          = f.label "Car Type"
          = f.select :car_type, [['Sedan', :sedan], ['Minivan', :minivan], ['Truck', :truck]], :prompt => 'Select Car Type'

          = f.submit "Save Order", class: 'button expand'