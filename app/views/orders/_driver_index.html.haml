.driver_index{ data: { orders_status: "#{orders_status}" } } 
  - if orders.count > 0
    %table{width: "100%"}
      %thead
        %tr
          %th Info  
          %th Order
          %th Departure
          %th Destination
          %th Car
          %th Status 
      %tbody{ id: "driver_#{@driver.id}_table" }
        - orders.each do |order|
          %tr{ class: "order_#{order.id}" }
            %td{ class: "show_button" } 
              = link_to "Show", order_path(order), method: :get, class: "button tiny round info show_order", role: 'button'
            %td.order_id  
              = order.id  
            %td.departure 
              = order.departure
            %td.destination 
              = order.destination
            %td.car_type
              = order.car_type.capitalize 
            %td.status
              %b
                = order.status.capitalize  
  - else
    %h3
      %center There are no Orders yet.                 