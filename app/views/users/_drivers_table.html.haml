%table{width: "100%"}
  %thead
    %tr
      %th Info  
      %th Driver
      %th Name
      %th Phone
      %th Car
      %th Rating
      %th Status
  %tbody
    - drivers.each do |driver|
      %tr
        %td.show_button 
          = link_to "Show", driver_path(driver), class: "button tiny round success show_driver", role: 'button'
        %td 
          = driver.id  
        %td
          = driver.firstname
          = driver.lastname
        %td
          = driver.phone
        %td
          = driver.car_type.capitalize  
        %td
          = driver.rating  
        %td
          %b
            = driver.busy? ? "Busy" : "Free"
