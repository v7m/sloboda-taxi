= content_for :title, "Drivers"
%center
  %h2 Drivers

.row
  .small-2.columns
    .sort_button
      %ul.side-nav{ role: "navigation", title: "Link List" }
        %li{ role: "menuitem" }
          = link_to "All", orders_path(orders_status: "all"), data: { orders_status: "all" }, remote: true 
        
            
  .small-8.small-centered.columns.index_table    
    %table{width: "100%"}
      %thead
        %tr
          %th Info  
          %th Driver
          %th Name
          %th Phone
          %th Car
          %th Status
      %tbody
        - @drivers.each do |driver|
          %tr
            %td.show_button 
              = link_to "Show", driver_path(driver), class: "button tiny round success show_order", role: 'button'
            %td 
              = driver.id  
            %td
              = driver.firstname
              = driver.lastname
            %td
              = driver.phone
            %td
              = driver.car_type.capitalize  
            %td
              %b
                NOT IMPL 